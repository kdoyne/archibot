<h2>Welcome <%=@user.first_name %>!</h2>
<h3><%= link_to("Browse the database", architects_path) %></h3>

<p>Full Name:
  <%= @user.first_name %> <%= @user.last_name %></p>

<p>Email Address:
  <%= @user.email %></p>

<ul>
<% @favorites.each do |building| %>
<li><%=link_to("#{building.name}", architect_building_path(building.architect.id, building.id)) %></li>
<%end%>
</ul>
<br>

<a href="/users/<%= @user.id %>/edit">Edit my info</a>
<form action="/users/<%= @user.id%>" method="POST">
  <input type ="hidden" name="_method" value="DELETE">
  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
<button>Delete Account</button>
</form>
